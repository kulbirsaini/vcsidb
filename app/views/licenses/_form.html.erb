<%= javascript_tag do %>
  jQuery(document).ready(function(){
    jQuery('#license_start_date').datepicker({ dateFormat: 'yy-mm-dd', changeYear: true, changeMonth: true, gotoCurrent: true, yearRange: '2008:2014' });
    jQuery('#license_renewal_date').datepicker({ dateFormat: 'yy-mm-dd', changeYear: true, changeMonth: true, gotoCurrent: true, yearRange: '2008:2014' });
  });
<% end %>
<%= form_for(@license) do |f| %>
  <% if @license.errors.any? %>
    <div class="row">
      <div class="span14 offset1">
        <div id="error_explanation" class="alert-message block-message error">
          <h3><%= pluralize(@license.errors.count, "error") %> prohibited this license from being saved:</h3>

          <ul>
          <% @license.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row show-grid">
    <div class="span6">
      <div class="clearfix">
        <%= f.label :client_id %>
        <div class="input"><%= f.select :client_id, Client.all.map{ |c| [c.name_or_email, c.id] }, { :include_blank => 'Select Client' } %></div>
      </div>
      <div class="clearfix">
        <%= f.label :key %>
        <div class="input"><%= f.text_field :key, :autocomplete => "off" %></div>
      </div>
      <div class="clearfix">
        <%= f.label :start_date %>
        <div class="input"><%= f.text_field :start_date, :value => @license.try(:start_date).try(:to_date), :autocomplete => "off" %></div>
      </div>
      <div class="clearfix">
        <%= f.label :renewal_date %>
        <div class="input"><%= f.text_field :renewal_date, :value => @license.try(:renewal_date).try(:to_date), :autocomplete => "off" %></div>
      </div>
    </div>

    <div class="span7">
      <div class="clearfix">
        <%= f.label :renewal_reminders, 'Renewal Reminders' %>
        <div class="input"><%= f.select :renewal_reminders, 0.upto(3).map{ |i| [i, i] }, :selected => 2 %></div>
      </div>
      <div class="clearfix">
        <%= f.label :num_servers %>
        <div class="input"><%= f.number_field :num_servers, :autocomplete => "off" %></div>
      </div>
      <div class="clearfix">
        <%= f.label :trial %>
        <div class="input"><%= f.check_box :trial %></div>
      </div>
      <div class="clearfix">
        <%= f.label :expired %>
        <div class="input"><%= f.check_box :expired %></div>
      </div>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :notes %>
    <div class="input"><%= f.text_area :notes, { :class => 'largearea' } %></div>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
  </div>
<% end %>
